{%- unless settings.body_font.system?
  and settings.subheading_font.system?
  and settings.heading_font.system?
-%}
  <link
    rel="preconnect"
    href="https://fonts.shopifycdn.com"
    crossorigin
  >
{%- endunless -%}

{% # theme-check-disable %}
{%- unless settings.body_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.body_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.subheading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.subheading_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.heading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.heading_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.accent_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.accent_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{% # theme-check-enable %}
